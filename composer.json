{
    "name": "pfinalclub/php-mcp",
    "description": "PHP8 + Workerman 通用 MCP Server Composer 扩展包",
    "type": "library",
    "license": "MIT",
    "version": "1.0.3",
    "homepage": "https://github.com/pfinalclub/php-mcp",
    "support": {
        "issues": "https://github.com/pfinalclub/php-mcp/issues",
        "source": "https://github.com/pfinalclub/php-mcp",
        "docs": "https://github.com/pfinalclub/php-mcp/blob/main/README.md"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "workerman",
        "php8",
        "server",
        "ai",
        "claude",
        "chatgpt"
    ],
    "authors": [
        {
            "name": "PFinalClub",
            "email": "lampxiezi@gmail.com",
            "homepage": "https://friday-go.icu"
        }
    ],
    "require": {
        "php": "^8.2",
        "workerman/workerman": "^4.0",
        "psr/log": "^3.0",
        "ext-json": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "monolog/monolog": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PFPMcp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PFPMcp\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs": "phpcs src/ tests/",
        "cs-fix": "phpcbf src/ tests/",
        "stan": "phpstan analyse src/",
        "fix": "php-cs-fixer fix",
        "all": [
            "@cs",
            "@stan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}
